---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import Trust from '../components/sections/Trust.astro';
import ProductsHome from '../components/sections/ProductsHome.astro';
import Certifications from '../components/sections/Certifications.astro';
import Videos from '../components/sections/Videos.astro';
---

<Layout title="AGRONEGOCIOS LUYASA PERÚ SAC | Abonos Orgánicos">
  <Hero />
  <Trust />
  
  <section class="py-20 bg-gray-100 text-center border-y border-gray-200">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-4xl font-black uppercase italic mb-6 text-brand-dark">
        Abonos Personalizados por Cultivo
      </h2>
      
      <p class="text-lg mb-10 text-gray-800 font-medium leading-relaxed">
        Diseñamos mezclas NPK y microelementos específicas para 
        <span class="font-bold text-brand-green">café, cacao, palta, piña, papa y hortalizas</span>. 
        Aumenta tu rendimiento con fórmulas a medida.
      </p>
      
      <a href="/contacto" class="inline-block bg-brand-sun text-white px-10 py-4 rounded-full font-black text-lg shadow-xl shadow-brand-sun/20 hover:bg-brand-dark hover:text-white transition-all transform hover:-translate-y-1 uppercase italic tracking-wider">
        Solicitar Mezcla Especial
      </a>
    </div>
  </section>

  <ProductsHome />
  <Certifications />

</Layout>