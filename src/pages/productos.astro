---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/ui/PageHeader.astro';
import ProductCard from '../components/ui/ProductCard.astro';
import { getCollection } from 'astro:content';

const productos = await getCollection('productos');
---

<Layout title="Productos | Agronegocios Luyasa Perú SAC">
  
  <PageHeader 
    title="Nuestros Productos" 
    subtitle="Catálogo Especializado 2025"
    bgImage="https://images.unsplash.com/photo-1615811361523-6bd03d7748e7?q=80&w=2874&auto=format&fit=crop"
  />

  <section class="py-20 bg-brand-light">
    <div class="max-w-7xl mx-auto px-4">
      
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-4xl font-black text-brand-dark uppercase italic mb-4">Nutrición de Alto Rendimiento</h2>
        <p class="text-brand-earth text-lg">
          Todos nuestros productos cuentan con análisis garantizado y presentación en sacos de 50kg.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
        {productos.map(producto => (
          <ProductCard producto={producto} />
        ))}
      </div>

      <div class="bg-gray-200 border border-brand-green/20 rounded-[3rem] p-12 md:p-16 text-center relative overflow-hidden">
        
        <h3 class="text-3xl md:text-5xl font-black text-brand-dark uppercase italic mb-6 relative z-10">
          ¿Necesitas una formulación especial?
        </h3>
        
        <p class="text-brand-earth/80 text-xl mb-10 leading-relaxed font-medium max-w-3xl mx-auto relative z-10">
          Preparamos mezclas personalizadas de NPK y microelementos según el análisis de suelo de tu cultivo (Café, Cacao, Palta, etc).
        </p>
        
        <a 
          href="/contacto" 
          class="relative z-10 inline-block bg-brand-sun text-white px-12 py-5 rounded-full font-black text-xl shadow-xl hover:bg-brand-dark transition-all transform hover:-translate-y-1 uppercase tracking-wider"
        >
          Cotizar Mezcla Especial
        </a>
      </div>

    </div>
  </section>

</Layout>