---
import '../styles/global.css';
import Navbar from '../components/ui/Navbar.astro';
import Footer from '../components/ui/Footer.astro';

interface Props {
	title: string;
	description?: string;
}

const { 
  title, 
  description = "Agronegocios Luyasa Perú SAC - Líderes en fertilizantes y abonos personalizados." 
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Agronegocios Luyasa</title>
		<meta name="description" content={description} />
	</head>
	<body class="bg-brand-light text-brand-dark font-sans flex flex-col min-h-screen">
		<Navbar />
		
		<main class="grow">
			<slot />
		</main>

		<Footer />
	</body>
</html>