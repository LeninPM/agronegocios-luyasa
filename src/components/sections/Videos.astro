<script>
  document.addEventListener("DOMContentLoaded", function() {
    // 1. Buscamos la secci√≥n de videos
    const videosSection = document.getElementById('videos-section');
    
    // 2. Creamos un "Observador" que detecta cuando llegamos a esa secci√≥n
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // 3. SOLO cuando se ve la secci√≥n, cargamos el script de TikTok
          console.log("Cargando videos de TikTok...");
          
          const script = document.createElement('script');
          script.src = "https://www.tiktok.com/embed.js";
          script.async = true;
          document.body.appendChild(script);
          
          // 4. Dejamos de observar para no cargarlo dos veces
          observer.disconnect();
        }
      });
    }, { rootMargin: "200px" }); // Empieza a cargar 200px antes de llegar

    if (videosSection) {
      observer.observe(videosSection);
    }
  });
</script>